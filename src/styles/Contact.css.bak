/* Contact Section Redesign - Nexus Interface Style */

.contact-section {
    position: relative;
    padding: 120px 0;
    overflow: hidden;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

/* El fondo 3D lo bajamos un poco de opacidad en móvil para mejorar contraste */
.contact-section canvas {
    opacity: 0.8;
}

.contact-container {
    position: relative;
    z-index: 10;
    width: 90%;
    margin: 0 auto;
    padding: 0 5%;
    /* Añadido padding para evitar bordes pegados */
}

.contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 8rem;
    /* Aumentado significativamente para dejar espacio al núcleo 3D */
    align-items: center;
    max-width: 1400px;
    margin: 0 auto;
}

/* Info Panel */
.status-badge {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: rgba(0, 240, 255, 0.05);
    border: 1px solid rgba(0, 240, 255, 0.2);
    padding: 6px 15px;
    border-radius: 50px;
    font-size: 0.7rem;
    font-family: var(--font-mono);
    color: var(--accent-color);
    margin-bottom: 1.5rem;
}

.pulse-dot {
    width: 8px;
    height: 8px;
    background: var(--accent-color);
    border-radius: 50%;
    animation: signalPulse 1.5s infinite;
}

@keyframes signalPulse {
    0% {
        transform: scale(1);
        opacity: 1;
        box-shadow: 0 0 0 0 rgba(0, 240, 255, 0.7);
    }

    70% {
        transform: scale(1.1);
        opacity: 0.8;
        box-shadow: 0 0 0 10px rgba(0, 240, 255, 0);
    }

    100% {
        transform: scale(1);
        opacity: 1;
        box-shadow: 0 0 0 0 rgba(0, 240, 255, 0);
    }
}

.glitch-title {
    font-size: clamp(2.5rem, 8vw, 4rem);
    font-weight: 800;
    margin-bottom: 1.5rem;
    letter-spacing: -1px;
    color: #fff;
    line-height: 1;
    text-shadow: 0 0 30px rgba(0, 0, 0, 1), 0 0 60px rgba(0, 0, 0, 0.5);
    /* Sombra profunda para legibilidad */
}

.contact-desc {
    font-size: clamp(1rem, 2vw, 1.1rem);
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.85);
    /* Más brillante para mejorar contraste */
    margin-bottom: 2.5rem;
    max-width: 450px;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 1);
}

.social-uplinks {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.uplink-node {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.05);
    padding: 1rem 1.5rem;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s ease;
}

.uplink-node:hover {
    background: rgba(0, 240, 255, 0.05);
    border-color: rgba(0, 240, 255, 0.3);
    transform: translateX(10px);
}

.uplink-icon {
    font-size: 1.8rem;
    color: var(--accent-color);
    width: 40px;
}

.uplink-label {
    display: block;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: #fff;
}

.uplink-status {
    display: block;
    font-family: var(--font-mono);
    font-size: 0.65rem;
    color: rgba(0, 240, 255, 0.6);
}

.contact-info-panel {
    max-width: 500px;
    justify-self: start;
}

.contact-action-panel {
    max-width: 500px;
    justify-self: end;
}

/* Glass Card con mayor desenfoque para aislar del 3D */
.glass-card {
    background: rgba(10, 10, 10, 0.75);
    backdrop-filter: blur(30px);
    -webkit-backdrop-filter: blur(30px);
    border: 1px solid rgba(0, 240, 255, 0.15);
    border-radius: 20px;
    overflow: hidden;
    position: relative;
    box-shadow: 0 0 50px rgba(0, 0, 0, 0.8);
}

.card-header {
    background: rgba(255, 255, 255, 0.05);
    padding: 12px 20px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.terminal-id {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.4);
}

.window-controls {
    display: flex;
    gap: 8px;
}

.window-controls span {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.2);
}

.card-content {
    padding: 3rem;
    position: relative;
}

.card-content h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: #fff;
}

.card-content p {
    font-size: 0.95rem;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 2.5rem;
    line-height: 1.6;
}

.transmission-btn {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 15px;
    background: var(--accent-color);
    color: #000;
    text-decoration: none;
    padding: 1.2rem 2rem;
    border-radius: 12px;
    font-weight: 800;
    font-family: var(--font-mono);
    letter-spacing: 1px;
    transition: all 0.3s cubic-bezier(0.19, 1, 0.22, 1);
    overflow: hidden;
}

.transmission-btn:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 240, 255, 0.4);
}

.transmission-btn i {
    transition: transform 0.3s ease;
}

.transmission-btn:hover i {
    transform: translateX(5px);
}

.system-logs {
    margin-top: 3rem;
    background: rgba(0, 0, 0, 0.3);
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.05);
}

.log-line {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--accent-color);
    opacity: 0.6;
    margin-bottom: 5px;
}

/* Footer Section */
.section-footer {
    padding-top: 6rem;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 10;
}

.footer-line {
    height: 1px;
    background: linear-gradient(to right, transparent, rgba(255, 255, 255, 0.1), transparent);
    margin-bottom: 2rem;
}

.footer-meta {
    display: flex;
    justify-content: space-between;
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.3);
    padding: 0 2rem;
}

/* Responsive adjustments */
@media (max-width: 1200px) {
    .glitch-title {
        font-size: 3.5rem;
    }
}

@media (max-width: 992px) {
    .contact-grid {
        grid-template-columns: 1fr;
        gap: 3rem;
    }

    .contact-info-panel {
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        order: 1;
        /* El texto va primero */
    }

    .contact-action-panel {
        order: 2;
        /* Luego la tarjeta */
        width: 100%;
        max-width: 600px;
        margin: 0 auto;
    }

    .contact-desc {
        max-width: 600px;
    }
}

@media (max-width: 768px) {
    .contact-section {
        padding: 80px 0;
    }

    .card-content {
        padding: 2.5rem 1.5rem;
    }

    .glitch-title {
        font-size: 2.8rem;
    }
}

@media (max-width: 480px) {
    .glitch-title {
        font-size: 2.2rem;
    }

    .transmission-btn {
        padding: 1rem 1.5rem;
        font-size: 0.85rem;
    }

    .footer-meta {
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        text-align: center;
        padding: 0 1rem;
    }
}