/*
* ----------------------------------------------------------------------------------------
*  NEXUS HARDWARE - MAIN STYLESHEET
* ----------------------------------------------------------------------------------------
*  TABLE OF CONTENTS:
*  1.  Variables & Design Tokens (:root)
*  2.  Reset & Base Styles
*  3.  Utilities & Helpers
*  4.  Animations (Keyframes)
*  5.  Components (Buttons, Loaders, HUD)
*  6.  Layout Sections (Hero, About, Projects)
*  7.  Unified Card System (.tech-card)
*  8.  Media Queries & Responsive Logic
*  ----------------------------------------------------------------------------------------
*/

:root {
    /* --- COLORS --- */
    --bg-color: #050505;
    /* Deep Black */
    --text-color: #ffffff;
    --accent-color: #ffffff;
    --secondary-bg: #111111;
    --secondary-text: #ffffff;

    /* Semantic Colors */
    --card-bg: #ffffff;
    --card-text: #000000;
    --border-black: #000000;
    --indicator-green: #00ff00;

    /* --- TYPOGRAPHY --- */
    --font-primary: 'Inter', sans-serif;
    --font-mono: 'Space Mono', monospace;

    /* --- CONFIG --- */
    --transition-speed: 0.5s;

    /* --- Z-INDEX LAYERS (Single Source of Truth) --- */
    --z-background: -999;
    --z-base: 1;
    --z-card: 10;
    --z-floating: 100;
    --z-hud: 9999;
    --z-nav: 9999;
    --z-overlay: 10000;
    --z-cursor: 100000;
    --z-boot: 99999;
}

/* --- RESET & BASE --- */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    cursor: none;
}



img,
picture,
video,
canvas,
svg {
    display: block;
    max-width: 100%;
}

input,
button,
textarea,
select {
    font: inherit;
    color: inherit;
}

/* --- UTILITIES --- */
.flex-center {
    display: flex;
    justify-content: center;
    align-items: center;
}

.font-mono {
    font-family: var(--font-mono);
}

/* Barra de desplazamiento personalizada - Estilo Minimalista */
::-webkit-scrollbar {
    width: 5px;
}

::-webkit-scrollbar-track {
    background: #000;
}

::-webkit-scrollbar-thumb {
    background: #fff;
}

::-webkit-scrollbar-thumb:hover {
    background: #333;
}

html {
    scroll-behavior: smooth;
    font-size: 16px;
    overflow-x: hidden;
    width: 100vw;
    background-color: #000;
    /* Prevent white flash */
}

html.boot-complete {
    scroll-snap-type: y mandatory;
}

/* Disable scroll snap on mobile/tablet */
@media (max-width: 900px) {
    html.boot-complete {
        scroll-snap-type: none;
    }
}

body {
    background-color: #000;
    color: var(--text-color);
    font-family: 'Inter', sans-serif;
    line-height: 1.5;
    overflow: hidden;
    /* Locked during boot */
    transition: background-color var(--transition-speed), color var(--transition-speed);
    display: flex;
    place-items: flex-start;
    min-width: 320px;
    min-height: 100vh;
}

body.boot-complete {
    animation: globalFadeIn 1.5s ease forwards;
}

/* Unified Fade Animations */
@keyframes globalFadeIn {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
        filter: blur(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
        filter: blur(0);
    }
}

.section,
.hero-section {
    scroll-snap-align: start;
    scroll-snap-stop: always;
}

/* Clase para cambiar a tema claro o desbloquear */
body.boot-complete {
    background-color: var(--bg-color);
    overflow-y: auto;
    /* Habilitar desplazamiento después del arranque */
    overflow-x: hidden;
}

/* Sobrescritura de Tipografía para fuentes monoespaciadas */
.role,
.btn,
.tags span,
.project-link,
.nav-links a,
.hud-data,
.footer {
    font-family: var(--font-mono);
}

/* Cursor Personalizado */
.cursor-dot,
.cursor-outline {
    position: fixed;
    top: 0;
    left: 0;
    transform: translate(-50%, -50%);
    border-radius: 50%;
    z-index: var(--z-cursor);
    pointer-events: none;
    mix-blend-mode: difference;
    /* Efecto negativo para invertir colores */
}

.cursor-dot {
    width: 8px;
    height: 8px;
    background-color: #fff;
    /* Base blanca para la inversión de color */
    opacity: 0;
    /* Oculto inicialmente, JS lo mostrará al mover el mouse */
}

.cursor-outline {
    width: 40px;
    height: 40px;
    border: 1px solid #fff;
    /* Base blanca para la inversión */
    transition: width 0.2s, height 0.2s, background-color 0.2s;
    opacity: 0;
    /* Oculto inicialmente, JS lo mostrará */
}

#stars-canvas {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: var(--z-background);
    /* Detrás de todo el contenido */
    pointer-events: none;
}

/* Superposición HUD - Capa superior para datos de interfaz, pero permite interacción debajo si es necesario */
.hud-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
    /* Capa Superior */
    pointer-events: none;
    padding: 2rem;
    color: #fff;
    /* Blanco para el HUD */
}

.hud-corners .corner {
    position: absolute;
    width: 20px;
    height: 20px;
    border: 2px solid #fff;
    /* Blanco para visibilidad */
    opacity: 0.5;
}

.topleft {
    top: 2rem;
    left: 2rem;
    border-right: none;
    border-bottom: none;
}

.topright {
    top: 2rem;
    right: 2rem;
    border-left: none;
    border-bottom: none;
}

.bottomleft {
    bottom: 2rem;
    left: 2rem;
    border-right: none;
    border-top: none;
}

.bottomright {
    bottom: 2rem;
    right: 2rem;
    border-left: none;
    border-top: none;
}

.hud-data {
    position: absolute;
    font-size: 0.8rem;
    opacity: 0.7;
    letter-spacing: 1px;
}

.topleft-data {
    top: 8rem;
    /* Movido hacia abajo para evitar superposición con el Logo */
    left: 4rem;
}

.bottomleft-data {
    bottom: 2.5rem;
    left: 4rem;
}

.bottomright-data {
    bottom: 2.5rem;
    right: 4rem;
}

/* Controlador de Visibilidad basado en el Body (Estado de Arranque) */
body:not(.boot-complete) .navbar,
body:not(.boot-complete) .bottom-nav,
body:not(.boot-complete) .hero-content,
body:not(.boot-complete) .hud-overlay,
body:not(.boot-complete) .section {
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
}

/* Estado de Revelación: Aplicado después de la secuencia de arranque */
.content-visible {
    opacity: 1 !important;
    visibility: visible !important;
    animation: fadeInContent 1.0s cubic-bezier(0.22, 1, 0.36, 1) forwards;
}

@keyframes fadeInContent {
    0% {
        opacity: 0;
        filter: blur(20px);
        transform: translateY(20px);
    }

    100% {
        opacity: 1;
        filter: blur(0);
        transform: translateY(0);
    }
}




/* Pantalla de Carga */
#boot-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at center, rgba(10, 20, 30, 0.4) 0%, var(--bg-color) 90%);
    z-index: var(--z-boot);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-family: var(--font-mono);
    color: var(--text-color);
    /* Cyan ctOS */
    pointer-events: none;
    overflow: hidden;
    transition: opacity 0.5s ease-out, visibility 0.5s ease-out;
    /* Prepare for fade */
}

/* Hide overlay when boot is complete */
body.boot-complete #boot-overlay {
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
}

.ctos-center-container {
    position: relative;
    width: 300px;
    height: 300px;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 2rem;
}


.loader-text {
    font-family: var(--font-mono);
    font-weight: 700;
    font-size: 1.2rem;
    letter-spacing: 4px;
    color: #fff;
    text-shadow: 0 0 10px rgba(211, 211, 211, 0.8);
    margin-bottom: 0.5rem;
}

/* Barra de Progreso */
.loader-bar-bg {
    width: 100%;
    height: 2px;
    background: rgba(255, 255, 255, 0.1);
    position: relative;
    overflow: hidden;
}

.loader-bar-fill {
    width: 0%;
    height: 100%;
    background: #f7f7f7;
    box-shadow: 0 0 15px #dfdfdf;
    transition: width 0.1s linear;
    /* Controlled by JS for precision */
}

/* Percentage Display */
.loader-percent {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: #f0f0f0;
    align-self: flex-end;
    font-weight: bold;
}


.bar-segment {
    width: 50px;
    height: 4px;
    background: rgba(0, 240, 255, 0.3);
    animation: barFill 1s infinite alternate;
}

.bar-segment:nth-child(2) {
    animation-delay: 0.2s;
}

.bar-segment:nth-child(3) {
    animation-delay: 0.4s;
}

/* Removed unused animations: spinRight, spinLeft, pulseScale */

@keyframes barFill {
    from {
        background: rgba(0, 240, 255, 0.1);
    }

    to {
        background: #00f0ff;
    }
}

.dash-sep {
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    margin: 0.5rem 0;
}

.stat-row {
    display: flex;
    margin-bottom: 2px;
}

.stat-label {
    width: 30px;
}

.stat-bar {
    color: #00ff00;
    letter-spacing: -1px;
}

.stat-val {
    margin-left: auto;
    padding-left: 1rem;
}

/* Barra de Navegación (Píldora Central Superior) */
.navbar {
    position: fixed;
    top: 1.5rem;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 5%;
    z-index: 9999;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.8s ease, transform 0.8s ease;
    transform: translateY(-20px);
}

.navbar.content-visible {
    opacity: 1;
    transform: translateY(0);
}

.navbar-wrapper {
    background: var(--secondary-bg);
    /* Fallback / Theme variable */
    backdrop-filter: blur(10px);
    padding: 0.6rem 2rem;
    border-radius: 50px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    display: flex;
    align-items: center;
    gap: 3rem;
    pointer-events: auto;
    pointer-events: all;
}

.logo {
    font-size: 1.2rem;
    font-weight: 950;
    text-decoration: none;
    color: #fff;
    letter-spacing: -1px;
}

/* Columna Social */
.social-column {
    position: fixed;
    bottom: 2rem;
    left: 4.5%;
    z-index: 9995;
    pointer-events: auto;
}

.social-links-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
}

.social-link {
    color: #fff;
    transition: all 0.3s ease;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transform: translateY(20px);
}

.hud-overlay.content-visible .social-link {
    animation: fadeInUpSocial 0.6s ease forwards;
}

.hud-overlay.content-visible .social-link:nth-child(2) {
    animation-delay: 0.1s;
}

.social-link:hover {
    opacity: 1 !important;
    transform: scale(1.2) translateY(-3px) !important;
}

.social-link svg {
    width: 100%;
    height: 100%;
}

.social-line {
    width: 1px;
    height: 60px;
    background: linear-gradient(to top, rgba(255, 255, 255, 0), rgba(255, 255, 255, 0.5));
    opacity: 0;
    transform: scaleY(0);
    transform-origin: bottom;
}

.hud-overlay.content-visible .social-line {
    animation: scaleLine 0.8s ease forwards;
    animation-delay: 0.3s;
}

@keyframes fadeInUpSocial {
    to {
        opacity: 0.4;
        transform: translateY(0);
    }
}

@keyframes scaleLine {
    to {
        opacity: 1;
        transform: scaleY(1);
    }
}

.nav-links {
    display: flex;
    gap: 2rem;
}

.nav-links a {
    text-decoration: none;
    color: #fff;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 400;
    opacity: 0.6;
    transition: opacity 0.3s ease;
}

.nav-links a:hover {
    opacity: 1;
    transform: translateY(-2px);
}

.nav-links a::after {
    content: '';
    position: absolute;
    width: 0;
    height: 1px;
    bottom: -5px;
    left: 0;
    background-color: #fff;
    transition: width 0.3s;
}

/* Sección Hero - Estructura Base de Centrado Absoluto */


/* Removed conflicting z-index hack */

.hero-content {
    /* Estado Inicial (JS cambiará a show-element) */
    opacity: 0;
    visibility: hidden;
    transform: translateY(-40%) !important;
    /* Ligeramente desplazado para efecto entrada */
    filter: blur(10px);

    /* Layout Universal y Robusto - Alineado a la Izquierda */
    position: absolute;
    top: 50%;
    left: 10%;
    /* Margen izquierdo relativo seguro */

    width: auto;
    max-width: 800px;
    /* Permitir suficiente ancho sin tocar el globo */
    margin: 0 !important;
    /* Eliminar márgenes fijos antiguos */

    display: flex;
    flex-direction: column;
    align-items: flex-start;
    /* Alinear flex items a la izquierda */
    justify-content: center;
    text-align: left;
    /* Alineación de texto a la izquierda */

    z-index: 10;
    pointer-events: none;
    box-sizing: border-box;

    transition:
        opacity 1.5s ease-out,
        transform 1.5s cubic-bezier(0.19, 1, 0.22, 1),
        filter 1.5s ease-out;
}

/* Estado Animado (Final) */
body.boot-complete .hero-content.show-element {
    opacity: 1;
    visibility: visible;
    transform: translateY(0) !important;
    filter: blur(0);
}



/* ... props ya definidos en bloque consolidado ... */

/* Solo los elementos interactivos reales deben capturar el mouse (botones, links) */
.hero-content a,
.hero-content button {
    pointer-events: auto;
}

/* El texto no debe bloquear el globo */
.hero-content .title,
.hero-content .subtitle,
.hero-content .role {
    pointer-events: none;
    user-select: none;
    /* Opcional: evita que se seleccione al intentar arrastrar el globo */
}

/* Mobile Adaptation */
@media (max-width: 900px) {
    .hero-content {
        position: relative !important;
        inset: auto !important;
        margin: 2rem auto !important;

        /* FIX: Usar fit-content para no bloquear todo el ancho de pantalla (globo interactuable) */
        width: fit-content !important;
        max-width: 90% !important;

        padding: 0 1rem !important;
    }
}

/* Strict hiding during boot */
body:not(.boot-complete) .hero-content {
    opacity: 0 !important;
    visibility: hidden !important;
}

/* HUD and Nav Transitions */
.hud-overlay,
.navbar {
    opacity: 0;
    visibility: hidden;
    transition: opacity 1.5s ease;
}

.hud-overlay.content-visible,
.navbar.content-visible {
    opacity: 1;
    visibility: visible;
}

/* Centrar texto en móviles */
@media (max-width: 768px) {
    .hero-content {
        margin: 0;
    }
}

.subtitle {
    font-size: clamp(0.75rem, 3vw, 1.1rem);
    text-transform: uppercase;
    letter-spacing: 3px;
    margin-bottom: 0.5rem;
    /* Tightened */
    opacity: 0.8;
}

.title {
    font-size: clamp(1.8rem, 8vw, 4.8rem);
    /* Reducido para evitar cortes en Notebooks */
    line-height: 0.82;
    font-weight: 950;
    margin-bottom: 0.8rem;
    letter-spacing: -2px;
    color: #fff;
    text-transform: uppercase;
    text-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
}

/* Specific Fix ONLY for Small Laptops (Macbook Air 13" etc) - Stops at 1280px */
@media (min-width: 900px) and (max-width: 1280px) {
    .title {
        font-size: clamp(3rem, 5vw, 4.5rem);
        /* Smaller scale just for this range */
        letter-spacing: -2px;
    }
}





@media (max-width: 768px) {
    .title {
        letter-spacing: -1px;
        /* Tighter spacing on mobile */
        margin-bottom: 1.5rem;
    }
}

.role {
    font-size: clamp(0.9rem, 2vw, 1.5rem);
    /* Responsive: se achica proporcionalmente */
    margin-bottom: 0;
    font-weight: 300;
    letter-spacing: 2px;
    /* Un poco de aire para que se vea más técnico */
}

/* Animaciones de Entrada Escalonada (CSS Fade In Up) */
.hero-content .subtitle,
.hero-content .title,
.hero-content .role {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.8s ease-out, transform 0.8s cubic-bezier(0.19, 1, 0.22, 1);
}

/* Al activarse el hero (show-element), disparar transición */
body.boot-complete .hero-content.show-element .subtitle {
    opacity: 0.8;
    /* Opacidad original del subtítulo */
    transform: translateY(0);
    transition-delay: 0.1s;
}

body.boot-complete .hero-content.show-element .title {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.3s;
}

body.boot-complete .hero-content.show-element .role {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.5s;
}

/* Quitar animaciones viejas si quedaran */
.animate-text span {
    animation: none;
}

/* Contenedor del Globo: Diseño Base */
#globe-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 1;
    pointer-events: none;
    opacity: 0;
    visibility: hidden;

    /* SYNCED TRANSITION WITH HERO */
    transition: opacity 1.5s ease-out;
}

/* Asegurar que el globo sea visible durante secuencia de arranque */
body:not(.boot-complete) #globe-container {
    opacity: 1;
    visibility: visible;
}

/* Increased specificity for Globe sync */
body.boot-complete #globe-container.show-element {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
}

@keyframes fadeInGlobe {
    0% {
        opacity: 0;
        filter: blur(20px);
        transform: scale(1.05);
    }

    100% {
        opacity: 1;
        filter: blur(0);
        transform: scale(1);
    }
}

body.boot-complete #globe-container {
    z-index: 1;
    /* Capa de Fondo */
    pointer-events: none;
    /* Modo interactivo manejado por JS */
}

body.boot-complete #globe-container.morphing {
    z-index: 1;
    /* Prevenir salto arriba durante morph */
}

body.boot-complete #globe-container.interactive {
    z-index: 1;
    /* Mantener fondo incluso interactivo */
    pointer-events: auto;
}

#globe-container:active {
    cursor: grabbing;
}

/* Animación personalizada para globo (Consolidada arriba) */
/* Consolidated with main fadeInGlobe animation */

@media (max-width: 768px) {
    #globe-container {
        width: 100%;
        /* Full width of parent */
        height: 60vh;
        /* Use viewport height percentage instead of width for stability */
        top: 15%;
        /* Position cleanly */
        left: 0;
        right: 0;
        margin: 0 auto;
        /* Auto margins for centering */
        transform: none;
        /* Remove complex transforms */
        opacity: 0.3;
        overflow: visible;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* Ensure canvas inside scales correctly */
    #globe-container canvas {
        width: 100% !important;
        height: 100% !important;
        object-fit: contain;
    }
}

.btn {
    display: inline-block;
    padding: 1rem 2rem;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 1px solid var(--text-color);
    margin: 0 10px;
}

.btn-primary {
    background-color: var(--text-color);
    color: var(--bg-color);
}

.btn-primary:hover {
    background-color: transparent;
    color: var(--text-color);
}

.btn-secondary {
    background-color: transparent;
    color: var(--text-color);
}

.btn-secondary:hover {
    background-color: var(--text-color);
    color: var(--bg-color);
}

/* Secciones Generales */
.section {
    padding: 10vh 10%;
    /* Relleno responsivo */
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    z-index: 500;
    /* Capa Media (Tarjetas de contenido) */
    pointer-events: none;
    /* Permitir interactuar con el globo */
    perspective: 1500px;
}

.hero-section {
    padding: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    /* Precise horizontal alignment to the left */
    position: relative;
    z-index: 500;
    pointer-events: none;
}

/* --- REDISEÑO DE CASCADA DE 'SOBRE MÍ' --- */
.about-cascade-container {
    position: relative;
    width: 100%;
    min-height: 100vh;
    padding: 120px 2% 120px;
    /* Relleno lateral mínimo */
    z-index: 500;
    /* Capa Superior */
    pointer-events: none;
}

#about .section-title {
    font-size: clamp(2.5rem, 8vw, 5rem);
    letter-spacing: 1rem;
    font-weight: 900;
    margin-bottom: 8rem;
    text-align: center;
    width: 100%;
}

/* --- UNIFIED CARD SYSTEM (.tech-card) --- */
/* Common Logic with Variable Hooks for Customization */
.tech-card,
.solid-card,
.skill-module,
.vault-item,
.contact-terminal,
.comm-card {
    /* Variables Default (Matches .solid-card & .comm-card) */
    --clip-size: 20px;
    --corner-size: 30px;

    background: var(--card-bg);
    color: var(--card-text);
    position: relative;
    border: none;
    box-shadow: 0 0 30px rgba(255, 255, 255, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    overflow: visible;
    transform-style: preserve-3d;

    /* Dynamic Clip Path */
    clip-path: polygon(var(--clip-size) 0,
            100% 0,
            100% calc(100% - var(--clip-size)),
            calc(100% - var(--clip-size)) 100%,
            0 100%,
            0 var(--clip-size));
}

.tech-card::before,
.tech-card::after,
.solid-card::before,
.solid-card::after,
.skill-module::before,
.skill-module::after,
.vault-item::before,
.vault-item::after,
.contact-terminal::before,
.contact-terminal::after,
.comm-card::before,
.comm-card::after {
