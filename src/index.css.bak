    font-size: 1rem;
    line-height: 1.6;
    color: #444;
    max-width: 90%;
}


/* 3. Specs Column */
.specs-column {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    border-left: 1px solid #eee;
    padding-left: 2rem;
    justify-content: center;
}

.spec-item {
    display: flex;
    flex-direction: column;
}

.spec-item .label {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: #999;
    margin-bottom: 4px;
}

.spec-item .value {
    font-size: 1.1rem;
    font-weight: 700;
    color: #000;
    font-family: var(--font-mono);
}

/* 4. Footer Deco */
.card-footer-deco {
    margin-top: auto;
    padding-top: 1rem;
    border-top: 1px solid #eee;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: #ccc;
}

.barcode {
    font-weight: 900;
    letter-spacing: 2px;
    font-size: 0.8rem;
    color: #000;
}

/* Windows Console Styles */
.window-console {
    background: #000;
    color: #fff;
    padding: 0;
    /* Removing padding to allow header to span full width */
    font-family: var(--font-mono);
    border: 1px solid #333;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    width: 100%;
}

.console-header {
    background: #fff;
    color: #000;
    padding: 4px 12px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.75rem;
    font-weight: 700;
    border-bottom: 1px solid #333;
}

.console-controls {
    display: flex;
    gap: 15px;
    opacity: 0.6;
}

.console-controls span {
    cursor: default;
}

.console-body {
    padding: 1.5rem;
    font-size: 0.95rem;
    line-height: 1.6;
    flex: 1;
}

.console-line {
    display: flex;
    gap: 8px;
    align-items: baseline;
    margin-bottom: 4px;
}

.console-line .prompt {
    color: #fff;
    font-weight: 700;
}

.console-line .label {
    color: #fff;
    opacity: 0.7;
}

.console-line .value {
    color: #fff;
}

.console-text {
    padding-left: 20px;
    opacity: 0.9;
    color: #fff;
    /* Removed italics for cleaner robostic look */
}

.blink-line .value {
    animation: console-blink 1s steps(2) infinite;
}

@keyframes console-blink {
    0% {
        opacity: 1;
    }

    100% {
        opacity: 0.4;
    }
}

/* Specific adjustment for bio card padding when console is present */
.holo-node[data-node="bio"] {
    padding: 1.5rem;
}

.holo-node[data-node="bio"] .tech-header {
    margin-bottom: 0.5rem;
}

/* 5. Ajustes Responsivos para el Perfil */
@media (max-width: 1100px) {
    .about-intro.dashboard-layout {
        flex-direction: column;
        gap: 2rem;
    }

    .profile-column,
    .terminal-column {
        width: 100%;
    }

    .role-title {
        font-size: 2.2rem;
    }
}

/* Anulación Específica de Centrado del Hero */
/* Asegura que el texto del hero se mantenga centrado verticalmente al 50% */
body.boot-complete .hero-content.show-element {
    animation: fadeInHeroContent 1.5s cubic-bezier(0.22, 1, 0.36, 1) forwards !important;
    transform: translateY(-50%) !important;
    opacity: 1 !important;
    visibility: visible !important;
}

@keyframes fadeInHeroContent {
    0% {
        opacity: 0;
        filter: blur(20px);
        transform: translateY(-30%);
        /* Empieza un poco más abajo (menos negativo) */
    }

    100% {
        opacity: 1;
        filter: blur(0);
        transform: translateY(-50%);
        /* Termina perfectamente centrado */
    }
}


/* Fix for Section Titles Overflowing on Mobile */
/* Fix for Section Titles Overflowing on Mobile & Tablet */
@media (max-width: 1024px) {
    .section-title {
        font-size: clamp(1.2rem, 5vw, 2.2rem) !important;
        /* Aggressive reduction to ensure fit */
        letter-spacing: 1px !important;
        /* Reduce spacing to save horizontal space */
        word-break: keep-all;
        /* Try to keep words together */
        white-space: nowrap;
        /* Force single line if possible, size will scale down */
        width: 100%;
        overflow: visible;
        /* Prevent cutting off if it slightly exceeds */
    }
}

/* 4. Contact Section - Communications Hub */
.communications-wrapper {
    display: flex;
    justify-content: center;
    width: 100%;
    padding: 2rem 0;
}

.comm-card {
    /* Extends .tech-card */
    display: flex;
    flex-direction: row;
    width: 100%;
    max-width: 800px;
    overflow: hidden;
    min-height: 300px;
}

.comm-card .card-body {
    align-items: center;
    text-align: center;
    padding: 3rem;
    width: 100%;
    /* Ensure full width */
}

.comm-card h3 {
    font-size: 2rem;
    margin-bottom: 1rem;
    font-family: var(--font-mono);
    font-weight: 700;
}

.comm-card p {
    margin-right: 0;
    margin-bottom: 2rem;
    max-width: 100%;
}

/* Main Action Button */
.comm-actions {
    margin: 2rem 0;
    width: 100%;
    display: flex;
    justify-content: center;
}

.comm-btn {
    background: #000;
    color: #fff;
    font-family: var(--font-mono);
    font-size: 1.2rem;
    padding: 1rem 2rem;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 1rem;
    clip-path: polygon(10px 0, 100% 0, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0 100%, 0 10px);
    transition: all 0.3s ease;
}

.comm-btn:hover {
    background: #333;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
}

/* Social Nodes Grid */
.social-nodes {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    width: 100%;
    max-width: 500px;
    margin: 0 auto 2rem auto;
}

.social-node {
    display: flex;
    align-items: center;
    gap: 1rem;
    background: #f5f5f5;
    padding: 1rem;
    text-decoration: none;
    color: #000;
    border: 1px solid #ddd;
    transition: all 0.2s ease;
}

.social-node:hover {
    background: #e0e0e0;
    transform: translateX(5px);
    border-color: #999;
}

.node-icon {
    font-size: 1.5rem;
    color: #666;
}

.node-data {
    display: flex;
    flex-direction: column;
    text-align: left;
}

.node-data .label {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    font-weight: 700;
}

.node-data .value {
    font-size: 0.6rem;
    color: #00ff00;
    /* Green success text */
    background: #000;
    padding: 2px 4px;
    margin-top: 2px;
    display: inline-block;
}

/* Footer Status */
.comm-status {
    width: 100%;
    border-top: 1px solid #eee;
    padding-top: 1rem;
    display: flex;
    justify-content: space-between;
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: #888;
}

.blink-text {
    animation: blinkText 1s infinite alternate;
    color: #00cc00;
}

/* Unified Blink Animation */
@keyframes blink-std {

    0%,
    100% {
        opacity: 1;
    }

    50% {
        opacity: 0.3;
    }
}

.blinking-cursor,
.blink-dot,
.blink-text,
.console-blink .value {
    animation: blink-std 1.5s step-end infinite;
}

@media (max-width: 600px) {
    .comm-card {
        flex-direction: column;
        min-height: auto;
    }

    .social-nodes {
        grid-template-columns: 1fr;
    }

    .comm-status {
        flex-direction: column;
        gap: 0.5rem;
    }

    .comm-card .card-body {
        padding: 1.5rem;
    }
}


/* End of valid styles */
/* --- ACCESSIBILITY --- */
@media (prefers-reduced-motion: reduce) {

    *,
    *::before,
    *::after {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
        scroll-behavior: auto !important;
    }
}

/* --- Generic Scroll Animations --- */
.scroll-reveal {
    opacity: 0;
    transform: translateY(30px);
    filter: blur(10px);
    transition: opacity 1.0s cubic-bezier(0.2, 0.8, 0.2, 1),
        transform 1.0s cubic-bezier(0.2, 0.8, 0.2, 1),
        filter 1.0s cubic-bezier(0.2, 0.8, 0.2, 1);
    will-change: opacity, transform, filter;
}

.scroll-reveal.in-view {
    opacity: 1;
    transform: translateY(0);
    filter: blur(0);
}

.show-element .timeline-entry,
.timeline-entry.in-view,
.in-view .timeline-entry {
    opacity: 1;
    transform: translateY(0);
    filter: blur(0);
    /* Ensure timeline entries also sharpen */
}