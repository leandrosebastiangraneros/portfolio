/* Línea de Tiempo Vertical Centrada */
.vertical-timeline-system {
    position: relative;
    max-width: 1100px;
    margin: 0 auto 10rem;
    padding: 4rem 0;
}

.timeline-main-line {
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 3px;
    background: rgba(255, 255, 255, 0.1);
    /* Blanco baja opacidad */
    transform: translateX(-50%);
}

.timeline-active-fill {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 0;
    /* Actualizado vía JS */
    background: #fff;
    /* Relleno blanco */
    box-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
}

.timeline-scrolling-dot {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 22px;
    height: 22px;
    background: #fff;
    /* Punto blanco */
    border-radius: 50%;
    z-index: 20;
    box-shadow:
        0 0 20px rgba(255, 255, 255, 0.6),
        0 0 40px rgba(255, 255, 255, 0.3);
    border: 3px solid #000;
    /* Borde negro para definición */
}

.timeline-entries {
    position: relative;
}

.timeline-entry {
    display: flex;
    width: 100%;
    margin-bottom: 6rem;
    opacity: 0;
    transform: translateY(40px);
    filter: blur(20px);
    transition: all 0.8s cubic-bezier(0.19, 1, 0.22, 1);
    will-change: opacity, transform, filter;
}

/* Staggered Delays for Fluidity */
.show-element .timeline-entry:nth-child(1),
.in-view .timeline-entry:nth-child(1) {
    transition-delay: 0.1s;
}

.show-element .timeline-entry:nth-child(2),
.in-view .timeline-entry:nth-child(2) {
    transition-delay: 0.2s;
}

.show-element .timeline-entry:nth-child(3),
.in-view .timeline-entry:nth-child(3) {
    transition-delay: 0.3s;
}

.show-element .timeline-entry:nth-child(4),
.in-view .timeline-entry:nth-child(4) {
    transition-delay: 0.4s;
}

.show-element .timeline-entry:nth-child(5),
.in-view .timeline-entry:nth-child(5) {
    transition-delay: 0.5s;
}

.show-element .timeline-entry:nth-child(6),
.in-view .timeline-entry:nth-child(6) {
    transition-delay: 0.6s;
}

.show-element .timeline-entry:nth-child(7),
.in-view .timeline-entry:nth-child(7) {
    transition-delay: 0.7s;
}

.show-element .timeline-entry:nth-child(8),
.in-view .timeline-entry:nth-child(8) {
    transition-delay: 0.8s;
}


.show-element .timeline-entry,
.timeline-entry.in-view,
.in-view .timeline-entry {
    opacity: 1;
    transform: translateY(0);
    filter: blur(0);
}

