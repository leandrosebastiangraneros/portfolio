:root {
    --primary-neon: #00f0ff;
    --primary-glow: rgba(0, 240, 255, 0.4);
    --bg-dark: #020202;
    --glass-bg: rgba(5, 5, 5, 0.8);
    --glass-border: rgba(0, 240, 255, 0.1);
    --font-heading: 'Orbitron', sans-serif;
    --font-body: 'Inter', sans-serif;
    --font-mono: 'Space Mono', monospace;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    background-color: var(--bg-dark);
    color: #fff;
    font-family: var(--font-body);
    overflow-x: hidden;
    min-height: 100vh;
}

/* Background Stars */
#stars-canvas-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    pointer-events: none;
}

/* Atmospheric Overlays */
.atmosphere-overlay {
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: 100;
}

.grain {
    position: absolute;
    inset: 0;
    background-image: url("https://grainy-gradients.vercel.app/noise.svg");
    opacity: 0.03;
    mix-blend-mode: overlay;
}

.scanlines {
    display: none;
}

/* --- CONTAINER --- */
.container {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
    position: relative;
    z-index: 10;
}

header {
    margin-bottom: 3rem;
    text-align: left;
}

.back-link {
    display: inline-block;
    color: var(--primary-neon);
    text-decoration: none;
    font-family: var(--font-mono);
    font-size: 0.7rem;
    letter-spacing: 1px;
    margin-bottom: 1rem;
    opacity: 0.6;
    transition: opacity 0.3s ease;
}

.back-link:hover {
    opacity: 1;
}

header h1 {
    font-family: var(--font-heading);
    font-size: clamp(2rem, 5vw, 4rem);
    font-weight: 900;
    letter-spacing: -2px;
    color: transparent;
    -webkit-text-stroke: 1px rgba(255, 255, 255, 0.2);
    background: linear-gradient(to bottom, #fff 0%, rgba(255, 255, 255, 0.1) 100%);
    -webkit-background-clip: text;
    background-clip: text;
}

.subtitle {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--primary-neon);
    opacity: 0.8;
    letter-spacing: 4px;
}

/* --- MAIN LAYOUT STRUCTURE --- */
.visualizer-layout {
    display: flex;
    flex-direction: column;
    gap: 4rem;
    align-items: center;
    width: 100%;
}

.upper-section {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    width: 100%;
}

.bottom-section {
    width: 100%;
    max-width: 1200px;
}

/* --- HOLOGRAPHIC PANELS --- */
.key-card,
.tkl-keyboard,
.info-container {
    background: var(--glass-bg);
    backdrop-filter: blur(40px);
    -webkit-backdrop-filter: blur(40px);
    border: 1px solid var(--glass-border);
    border-radius: 4px;
    padding: 2rem;
    position: relative;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
    clip-path: polygon(15px 0, 100% 0,
            100% calc(100% - 15px), calc(100% - 15px) 100%,
            0 100%, 0 15px);
}

.info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 3rem;
}

.key-card {
    width: 280px;
    min-height: 400px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
}

.key-display {
    font-size: 8rem;
    line-height: 1;
    margin-bottom: 2rem;
    color: var(--primary-neon);
    text-shadow: 0 0 30px var(--primary-neon);
    font-family: var(--font-heading);
}

.key-data {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.data-group {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.label {
    font-family: var(--font-mono);
    font-size: 0.6rem;
    color: rgba(255, 255, 255, 0.4);
}

.value {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--primary-neon);
    font-weight: bold;
}

/* Scanline Animation for panels */
.key-card::before,
.tkl-keyboard::before,
.info-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--primary-neon), transparent);
    animation: scanlineTop 4s infinite linear;
    z-index: 10;
}

@keyframes scanlineTop {
    0% {
        transform: translateX(-100%);
    }

    100% {
        transform: translateX(100%);
    }
}

/* --- TKL KEYBOARD LAYOUT 3D --- */
.tkl-keyboard {
    display: flex;
    flex-direction: column;
    gap: 15px;
    min-width: 950px;
    /* Un poco m√°s ancho */
    background: linear-gradient(145deg, #111, #050505);
    border-radius: 16px;
    border: 1px solid rgba(0, 240, 255, 0.2);
    transform-style: preserve-3d;
    perspective: 1500px;
    transform: rotateX(25deg) translateY(20px) scale(0.85);
    /* Escalado aumentado */
    transform-origin: center center;
    transition: transform 0.5s ease;
}

.keyboard-main-block {
    display: flex;
    gap: 25px;
}

.qwerty-block {
    display: flex;
    flex-direction: column;
    gap: 8px;
    flex: 1;
}

.nav-block {
    display: flex;
    flex-direction: column;
    gap: 8px;
    width: 145px;
}

.key-row {
    display: flex;
    gap: 6px;
}

.key-row.center-content {
    background: none;
}

/* SPACING */
.spacer-sm {
    width: 40px;
}

.spacer-row {
    height: 15px;
}

/* INDIVIDUAL KEYS */
.key {
    position: relative;
    height: 45px;
    flex: 1;
    transform-style: preserve-3d;
    transition: transform 0.15s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

/* Special widths */
.key-backspace {
    flex: 2;
}

.key-tab {
    flex: 1.5;
}

.key-backslash {
    flex: 1.5;
}

.key-caps {
    flex: 1.75;
}

.key-enter {
    flex: 2.25;
}

.key-shift-l {
    flex: 2.25;
}

.key-shift-r {
    flex: 2.75;
}

.key-ctrl,
.key-win,
.key-alt,
.key-menu {
    flex: 1.25;
}

.key-space {
    flex: 6.5;
}

/* Mechanical Parts */
.key-inner {
    position: absolute;
    inset: 0;
    transform-style: preserve-3d;
}

.key-inner div {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-heading);
    font-size: 0.6rem;
    pointer-events: none;
    backface-visibility: hidden;
    border-radius: 4px;
}

/* Cara Superior */
.key-inner .front {
    background: linear-gradient(145deg, #222, #111);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.6);
    transform: translateZ(10px);
    /* Altura de la tecla */
    z-index: 10;
    transition: all 0.1s ease;
}

/* Cara Frontal (Lateral) */
.key-inner .top {
    height: 10px;
    background: #0d0d0d;
    transform: rotateX(-90deg);
    transform-origin: bottom;
    bottom: 0;
}

.key-inner::before,
.key-inner::after {
    content: '';
    position: absolute;
    width: 10px;
    height: 100%;
    background: #0d0d0d;
    top: 0;
}

.key-inner::before {
    left: 0;
    transform: rotateY(-90deg);
    transform-origin: left;
}

.key-inner::after {
    right: 0;
    transform: rotateY(90deg);
    transform-origin: right;
}

/* BACKLIGHT */
.key::after {
    content: '';
    position: absolute;
    inset: -2px;
    background: var(--primary-neon);
    filter: blur(15px);
    opacity: 0;
    transition: opacity 0.2s ease;
    z-index: -1;
    transform: translateZ(-5px);
}

/* ACTIVE STATE */
.key.active {
    transform: translateZ(-8px);
}

.key.active .front {
    background: var(--primary-neon);
    color: #000;
    box-shadow: 0 0 30px var(--primary-neon), inset 0 0 10px rgba(255, 255, 255, 0.5);
    font-weight: bold;
}

.key.active::after {
    opacity: 0.4;
}

/* --- INFO SECTION --- */
.info-container {
    padding: 3rem;
}

.info-title {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    color: #fff;
    margin-bottom: 2rem;
    border-left: 4px solid var(--primary-neon);
    padding-left: 1rem;
}

.info-block h3 {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    color: var(--primary-neon);
    margin-bottom: 1rem;
}

.info-block p {
    font-size: 0.9rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 1.5rem;
}

.tech-badges {
    display: flex;
    gap: 0.8rem;
    flex-wrap: wrap;
}

.tech-badge {
    background: rgba(0, 240, 255, 0.05);
    border: 1px solid rgba(0, 240, 255, 0.2);
    padding: 0.3rem 0.8rem;
    font-family: var(--font-mono);
    font-size: 0.6rem;
    color: var(--primary-neon);
    border-radius: 2px;
}

.code-window {
    background: #0a0a0a;
    border: 1px solid #222;
    border-radius: 4px;
    overflow: hidden;
}

.window-header {
    background: #1a1a1a;
    padding: 5px 10px;
    font-family: monospace;
    font-size: 0.65rem;
    color: #888;
    border-bottom: 1px solid #333;
}

pre {
    margin: 0;
    padding: 1rem;
    overflow-x: auto;
}

code {
    font-family: 'Consolas', monospace;
    font-size: 0.75rem;
    color: #a9b7c6;
}

/* --- FOOTER --- */
.footer-info {
    margin: 4rem 0 2rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 254, 0.05);
    font-family: var(--font-heading);
    font-size: 0.6rem;
    color: rgba(255, 255, 255, 0.2);
    text-align: center;
}

/* --- RESPONSIVE WORKFLOW --- */

@media (max-width: 1300px) {
    .upper-section {
        flex-direction: column;
        gap: 2rem;
    }

    .tkl-keyboard {
        transform: rotateX(20deg) scale(0.75);
        margin-top: 0;
    }
}

@media (max-width: 1000px) {
    .tkl-keyboard {
        transform: rotateX(15deg) scale(0.65);
        margin-top: 0;
    }

    .info-grid {
        grid-template-columns: 1fr;
    }
}

@media (max-width: 768px) {
    .container {
        padding: 1rem;
    }

    .tkl-keyboard {
        transform: rotateX(10deg) scale(0.55);
        margin-top: 0;
    }

    .key-display {
        font-size: 6rem;
    }
}

@media (max-width: 480px) {
    .tkl-keyboard {
        transform: rotateX(5deg) scale(0.45);
        margin-top: 0;
        margin-left: 0;
    }

    .nav-block {
        display: none;
    }

    .key-display {
        font-size: 4rem;
    }

    header h1 {
        font-size: 2rem;
    }
}

/* Fix for background consistency */
html,
body {
    width: 100%;
    position: relative;
}